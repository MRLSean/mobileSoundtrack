{
  "meta": {
    "mimetype": "application/x-daoplayer-composition",
    "version": 1,
    "title": "Mobile Soundtrack - Scenes",
    "description" : "Scenes for the mobile soundtrack - Nottingham University to Wollaton Hall"
  },
  "scenes": [
    {
      "name": "Track1/start",
